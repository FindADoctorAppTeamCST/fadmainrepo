<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bt.gov.jdwnrh.www.findadoctor.ShareApp"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="119dp"
        android:layout_height="0dp"
        app:srcCompat="@mipmap/jdwnrh_logo"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="19dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find A Doc App"
        android:textColor="@android:color/black"
        android:textSize="@dimen/fab_margin"
        android:textAlignment="center"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="6dp"
        android:layout_marginTop="166dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="9dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="185dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/fab_margin"
                android:gravity="center">

                <ImageView
                    android:id="@+id/fb"
                    android:layout_width="61dp"
                    android:layout_height="45dp"
                    android:visibility="visible"
                    app:srcCompat="@mipmap/facebook" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="199dp"
                    android:layout_height="48dp"
                    android:background="@drawable/button"
                    android:onClick="facebookShare"
                    android:text="Share n Facebook"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:topLeftRadius="50dp"
                    android:topRightRadius="50dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/fab_margin"
                android:gravity="center">

                <ImageView
                    android:id="@+id/fm"
                    android:layout_width="61dp"
                    android:layout_height="45dp"
                    app:srcCompat="@mipmap/messenger" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:background="@drawable/button3"
                    android:onClick="messShare"
                    android:text="Share On Messenger"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/fab_margin"
                android:gravity="center">

                <ImageView
                    android:id="@+id/gp"
                    android:layout_width="61dp"
                    android:layout_height="45dp"
                    app:srcCompat="@mipmap/google_plus" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:background="@drawable/button1"
                    android:onClick="googleShare"
                    android:text="Share On Google Plus"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/fab_margin"
                android:gravity="center">

                <ImageView
                    android:id="@+id/hg"
                    android:layout_width="61dp"
                    android:layout_height="45dp"
                    app:srcCompat="@mipmap/hangouts" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:background="@drawable/button4"
                    android:onClick="hangoutsShare"
                    android:text="Share On Hangouts"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/fab_margin"
                android:layout_marginTop="@dimen/fab_margin"
                android:gravity="center">

                <ImageView
                    android:id="@+id/mess"
                    android:layout_width="61dp"
                    android:layout_height="45dp"
                    app:srcCompat="@mipmap/whatsapp" />
                <Button
                    android:id="@+id/button5"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:background="@drawable/button2"
                    android:onClick="whatsappShare"
                    android:text="Share On Whatsapp"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />
            </TableRow>
        </TableLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
