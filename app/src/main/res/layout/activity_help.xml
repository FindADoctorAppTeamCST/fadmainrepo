<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bt.gov.jdwnrh.www.findadoctor.Help"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:text="User Manual"
                android:textSize="24dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="@dimen/fab_margin"
                />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Search feature"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="left"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:gravity="left"
                android:text="@string/about_search"
                android:textSize="16dp"
                android:textStyle="italic"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Login feature"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>


            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:text="@string/about_login"
                android:textSize="16dp"
                android:gravity="start"
                android:textStyle="italic"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:text="Newsfeed feature"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="81dp"
                android:text="@string/about_newsfeed"
                android:textSize="16dp"
                android:gravity="start"
                android:textStyle="italic"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/button"
                android:layout_width="88dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:onClick="onClick"
                android:text="Next"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_gravity="right"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
